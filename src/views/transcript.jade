extends layout

block head
  meta(name='attach-transcript', content=interceptor.id)

block content
  h1 #{interceptor.id}.#{settings['proxy host']} &rarr; #{interceptor.host}
  table(class='table table-striped table-condensed')
    thead
      tr
        th(style='width: 40px;') Method
        th(style='width: 40px;') Status
        th Path
        th(style='width: 170px;') Content Type
        th(style='width: 80px;') Size
        th(style='width: 36px;')
    tbody(data-bind='foreach: exchanges')
      tr
        td(data-bind='text: method')
        td(data-bind='text: responseStatus')
        td(data-bind='text: path')
        td(data-bind='text: responseHeaders && responseHeaders["Content-Type"] && responseHeaders["Content-Type"].split(";")[0]')
        td(data-bind='text: responseHeaders && responseHeaders["Content-Length"]')
        td
          a(class='btn btn-mini btn-primary', data-bind='attr:{href:"/exchange/"+_id}') view

