extends layout

block content
  h1 #{interceptor.id}.#{settings['proxy host']} &rarr; #{interceptor.host}
  if interceptor.transcript.length > 0
    table(class='table table-striped table-bordered table-condensed')
      thead
        tr
          th(style='width: 40px;') Method
          th(style='width: 40px;') Status
          th Path
          th(style='width: 170px;') Content Type
          th(style='width: 120px;') Content Length
          th(style='width: 80px;') View
      tbody
        each exchange in interceptor.transcript
          tr
            td= exchange.method
            td= exchange.responseStatus
            td= exchange.path
            td= (exchange.responseHeaders || {})['Content-Type']
            td= (exchange.responseHeaders || {})['Content-Length']
            td
              a(href='/exchange/#{exchange.id}') view
  else
    p No exchanges yet! HTTP requests to the host #{interceptor.id}.#{settings['proxy host']} will appear here.

